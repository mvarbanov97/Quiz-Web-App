@model QuizWebApp.ViewModels.QuizViewModel
@{
    ViewData["Title"] = "Quiz Page";

}

<div class="content">
    <div class="container">
        <div class="row justify-content-sm-center">
            
            <div class="col-sm-4  justify-content-sm-center">
                <button id="newQuizButton" class="btn btn-primary">Start new Quiz</button>
            </div>
            
        </div>
    </div>

    <div class="container mt-sm-5 my-1">
        <p id="checkmark"></p>
        @for (int i = 0; i < this.Model.Questions.Count; i++)
        {
            var currentQuestion = this.Model.Questions.ElementAt(i);

            if (i == 0)
            {
                <div id="questionNumber_@i" class="question ml-sm-5 pl-sm-5 pt-2">
                    <span id="countdown" class="countdown">45</span>
                    <p>Category: @currentQuestion.CategoryName</p>
                    <div class="py-2 h5"><b id="qNumber">@(i+1) : @currentQuestion.Content</b></div>
                    <input id="correctAnswer_@i" type="hidden" value="@currentQuestion.CorrectAnswer" />
                    <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3">
                        <div id="options">
                            @foreach (var option in currentQuestion.Options)
                            {
                                <label class="options">@option<input id="option_@i" type="radio" name="radio_@i" value="@option"> <span class="checkmark"></span> </label>
                            }
                        </div>
                    </div>
                </div>
                continue;
            }
            else
            {
                <div id="questionNumber_@i" style="display:none" class="question ml-sm-5 pl-sm-5 pt-2">
                    <span id="countdown" class="countdown"></span>
                    <p>Category: @currentQuestion.CategoryName</p>
                    <div class="py-2 h5"><b id="qNumber">@(i+1) : @currentQuestion.Content</b></div>
                    <input id="correctAnswer_@i" type="hidden" value="@currentQuestion.CorrectAnswer" />
                    <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3">
                        <div id="options">
                            @foreach (var option in currentQuestion.Options)
                            {
                                <label class="options">@option<input id="option_@i" type="radio" name="radio_@i" value="@option"> <span class="checkmark"></span> </label>
                            }
                        </div>
                    </div>
                </div>
            }

        }
      
            <div class="d-flex align-items-center pt-3">
                <div class="ml-auto mr-sm-5">
                    <button id="nextButton" class="btn btn-primary">Next</button>
                    <button id="submitButton" style="display:none" class="btn btn-success">Submit</button>
                </div>
            </div>
    </div>
</div>

